{
  "name": "stencil-markdown",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist && npm run test && npm run lint",
    "copy": "cp src/markdown.d.ts dist/markdown.d.ts",
    "build": "tsc && npm run rollup",
    "postbuild": "npm run copy",
    "watch": "tsc --watch",
    "rollup": "rollup -c",
    "version": "npm run build",
    "release": "np",
    "lint": "tslint --project tsconfig.json",
    "test": "jest",
    "test.watch": "jest --watch"
  },
  "dependencies": {
    "frontmatter": "0.0.3",
    "marked": "^0.5.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@types/marked": "^0.4.2",
    "@types/node": "^8.5.1",
    "jest": "^23.6.0",
    "np": "^3.0.4",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.2",
    "tslint": "^5.11.0",
    "tslint-ionic-rules": "0.0.19",
    "typescript": "3.0.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/natemoo-re/stencil-markdown.git"
  },
  "author": "Ionic Team",
  "homepage": "https://github.com/natemoo-re/stencil-markdown/",
  "description": "Stencil Markdown Plugin",
  "keywords": [
    "stencil",
    "markdown"
  ],
  "jest": {
    "transform": {
      "^.+\\.(js|ts|tsx)$": "<rootDir>/test/jest.preprocessor.js"
    },
    "testRegex": "(\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "testURL": "http://localhost"
  }
}
